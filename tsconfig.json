{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "allowJs": true,
        "outDir": "./lib",
        "strict": true,
        "noImplicitAny": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/__tests__/*"]
}
